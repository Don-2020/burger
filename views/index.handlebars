<div class="container">
    {{!-- jumbotron --}}
    <div class="jumbotron text-center bg-primary text-white">
        <h1 class="display-4" id="app-title">Awesome Burger</h1>
        <p class="lead">Welcome to Awesome Burger, Home of the Awesome Burger</p>
    </div>
</div>

<div class="container">
    <div class="row">
    <div class="col-md-6 text-center">
        <h4>Ready To Eat</h4>
        <div id="ready_to_eat">

            {{#each burgers}}
            {{#unless devoured}}
            <form action="/api/burgers/{{id}}" method="post">
                <div class="input-group">
                    <li class="form-control">{{id}}. {{burger_name}}</li>
                    <span class="input-group-btn">
                        <button class="btn btn-success devour-button" type="submit">Devour It</button>
                    </span>
                </div>
            </form>
            {{/unless}}
            {{/each}}
        </div>
    </div>
    <div class="col-md-6 text-center">
        <h4>Aleady Eaten</h4>
        <div id="already_eaten">

            {{#each burgers}}
            {{#if this.devoured}}
            <div class="input-group">
                <li class="form-control">{{this.id}}. {{this.burger_name}}</li>

            </div>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>
</div>