<div class="container">
    {{!-- jumbotron --}}
    <div class="jumbotron text-center bg-primary text-white">
        <h1 class="display-4" id="app-title">Awesome Burger</h1>
        <p class="lead">Welcome to Awesome Burger, Home of the Awesome Burger</p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card border border-primary">
            <div class="card-header bg-primary text-white">
                Can I take your order?
            </div>
            {{!-- create/ add burger form --}}
            <div class="card-body">
                <form class="create-form">
                    <div class="form-group">
                        <label for="burger">Place Order Here</label>
                        <input type="text" name="" id="buyBurger" class="form-control" placeholder="">
                    </div>
                    <button class="btn btn-primary" type="submit"> Order </button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6 mt-4">
        <div class="card border border-primary">
            <div class="card-header bg-primary text-white">

            </div>
            <div class="card-body">
                {{#each bugers}}
                    {{#unless devoured}}
                        {{> burgers/burger-devoured devour=false}
                    {{/if }}
                {{/each}}
            </div>
        </div>
    </div>
</div>

<div class="col-md-4 mt-4">
    <div class="card devoured-card">
        <div class="card-header text-white">
            Devoured Burgers
        </div>

        <div class="card-body">
            {{#each burgers}}
                {{#if devoured}}
                    {{> burgers/burger-devoured devour=true}}
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>